<UserControl x:Class="ShadePicker.Elements.ColorElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShadePicker.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid x:Name="ColorBackground" Background="White" Width="150" Height="150">
        <Label x:Name="ColorName" Content="#Color name"/>
        <Label x:Name="ColorStatus" Content="#Color status" Margin="0,30,0,0"/>
    </Grid>
</UserControl>
